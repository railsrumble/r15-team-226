<p id="notice"><%= notice %></p>

<h1>Listing Pets</h1>

<table>
  <thead>
    <tr>
      <th>Pet type</th>
      <th>Breed</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Name</th>
      <th>Area</th>
      <th>Color</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.pet_type %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.gender %></td>
        <td><%= pet.age %></td>
        <td><%= pet.name %></td>
        <td><%= pet.area %></td>
        <td><%= pet.color %></td>
        <td><%= pet.location %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

