<div class='row'>
  <div class='col-lg-2'></div>
  <div class='col-lg-6'>
<%= form_for(@adoption_request) do |f| %>
  <% if @adoption_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@adoption_request.errors.count, "error") %> prohibited this adoption_request from being saved:</h2>

      <ul>
      <% @adoption_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :owner_id, value: current_owner.id %>
  <%= f.hidden_field :status, value: 'New' %>
  <%= f.fields_for :pet do |g| %>
    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Type
      </label>
      <div class='col-sm-9 select-wrapper'>
        <%= g.select :pet_type, options_for_select([['Select type', ''],['Cat', 'cat'], ['Dog', 'dog']], :selected => (g.object.pet_type if g.object.present? )), {class: 'form-control', required: :true} %>
        <%= hidden_field_tag "pet[owner_id]", current_owner.id %>
      </div>
    </div>

    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Breed
      </label>
      <div class='col-sm-9'>
        <%= g.text_field :breed, class: 'form-control' %>
      </div>
    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Name
      </label>
      <div class='col-sm-9'>
        <%= g.text_field :name, class: 'form-control' %>
      </div>

    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Gender
      </label>
      <div class='col-sm-9 select-wrapper'>
        <%= g.select :gender, options_for_select([['Select an option', ''], ['Male', 'male'], ['Female', 'female']], :selected => (g.object.gender if g.object.present? )), {class: 'form-control', required: :true} %>
      </div>
    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Age
      </label>
      <div class='col-sm-9'>
        <%= g.text_field :age, class: 'form-control' %>
      </div>

    </div>




    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Area
      </label>
      <div class='col-sm-9'>
        <%= g.text_field :area, class: 'form-control' %>
      </div>
    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Color
      </label>
      <div class='col-sm-9'>
        <%= g.text_field :color, class: 'form-control' %>
      </div>
    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Photos
      </label>
      <div class='col-sm-9'>
        <%= g.file_field :attachment,:name => "adoption_request[pet_attributes][attachments_attributes][][file]",:multiple => true %>
      </div>
    </div>
  <% end %>
  <div class="row form-group">
    <div class='col-sm-1'></div>
    <label class='col-sm-2 form-label' style="font-size:15px;">
    </label>
    <div class='col-sm-2'>
    <%= f.submit 'Send Request', :class => 'button fit small' %>
  </div>
</div>
<% end %>
</div>
<div class='col-lg-2'></div>
</div>
