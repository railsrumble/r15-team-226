<div class='row'>
  <div class='col-lg-2'></div>
  <div class='col-lg-6'>

  <%= form_for(@pet, url: @url) do |f| %>
    <% if @pet.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

        <ul>
        <% @pet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Type
      </label>
      <div class='col-sm-9'>
        <div class="select-wrapper">
          <div class='select-wrapper'>
            <%= f.select :pet_type, options_for_select([['Select type', ''],['Cat', 'cat'], ['Dog', 'dog']], :selected => (f.object.pet_type if f.object.present?)), {class: 'form-control', required: :true} %>
          </div>
        <%= hidden_field_tag "pet[owner_id]", current_owner.id %>
      </div>
      </div>
    </div>

    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Breed
      </label>
      <div class='col-sm-9'>
        <div class='select-wrapper'>
          <%= f.select :breed, options_for_select(["Select Breed", ""]),class: 'form-control' %>
        </div>
      </div>
    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Name
      </label>
      <div class='col-sm-9'>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Gender
      </label>
      <div class='col-sm-9'>
        <div class="select-wrapper">
          <div class='select-wrapper'>
            <%= f.select :gender, options_for_select([['Select an option', ''], ['Male', 'male'], ['Female', 'female']], :selected => (f.object.gender if f.object.present?)), {class: 'form-control', required: :true} %>
          </div>
        </div>
      </div>
    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Age
      </label>
      <div class='col-sm-9'>
        <%= f.text_field :age, class: 'form-control' %>
      </div>

    </div>




    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Area
      </label>
      <div class='col-sm-9'>
        <%= f.text_field :area, class: 'form-control', id: 'show_user_location' %>
      </div>
    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Color
      </label>
      <div class='col-sm-9'>
        <%= f.text_field :color, class: 'form-control' %>
      </div>
    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label' style="font-size:15px;">
        Photos
      </label>
      <div class='col-sm-9'>
        <%= f.file_field :attachment,:name => "pet[attachments_attributes][][file]",:multiple => true %>
      </div>
    </div>



    <div class="form-group" style="margin-left:140px; width:0%">
      <%= f.submit :class => 'button fit small' %>
    </div>
  <% end %>
</div>
<div class='col-lg-2'></div>
</div>
