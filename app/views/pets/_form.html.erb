<div class='row'>
  <div class='col-lg-2'></div>
  <div class='col-lg-6'>
 <center><h2>Add a Pet</h2></center>
  <%= form_for(@pet, url: owner_pets_path) do |f| %>
    <% if @pet.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

        <ul>
        <% @pet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label'>
        Type
      </label>
      <div class='col-sm-9'>
        <div class="select-wrapper">
        <%= f.select :pet_type, options_for_select([['Select type', ''],['Cat', 'cat'], ['Dog', 'dog']]), {class: 'form-control', required: :true} %>
        <%= hidden_field_tag "pet[owner_id]", current_owner.id %>
      </div>
      </div>
    </div>

    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label'>
        Breed
      </label>
      <div class='col-sm-9'>
        <%= f.text_field :breed, class: 'form-control' %>
      </div>
    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label'>
        Name
      </label>
      <div class='col-sm-9'>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label'>
        Gender
      </label>
      <div class='col-sm-9'>
        <div class="select-wrapper">
        <%= f.select :gender, options_for_select([['Select an option', ''], ['Male', 'male'], ['Female', 'female']]), {class: 'form-control', required: :true} %>
      </div>
      </div>
    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label'>
        Age
      </label>
      <div class='col-sm-9'>
        <%= f.text_field :age, class: 'form-control' %>
      </div>

    </div>




    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label'>
        Area
      </label>
      <div class='col-sm-9'>
        <%= f.text_field :area, class: 'form-control', id: 'show_user_location' %>
      </div>
    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label'>
        Color
      </label>
      <div class='col-sm-9'>
        <%= f.text_field :color, class: 'form-control' %>
      </div>
    </div>


    <div class="row form-group">
      <div class='col-sm-1'></div>
      <label class='col-sm-2 form-label'>
        Photos
      </label>
      <div class='col-sm-9'>
        <%= f.file_field :attachment,:name => "pet[attachments_attributes][][file]",:multiple => true %>
      </div>
    </div>



    <div class="form-group" style="margin-left:140px;">
      <%= f.submit %>
    </div>
  <% end %>
</div>
<div class='col-lg-2'></div>
</div>
