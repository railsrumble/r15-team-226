<a href="<%= new_message_path %>" class="pull-right btn btn-info" style="margin-top: 6px; margin-right: 10px;">New Message</a>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Messages</h3>
  </div>
  <div class="panel-body">
    <div class="col-md-3">
      <div class="bs-example" data-example-id="list-group-custom-content">
        <div class="list-group first-message-enable message-list">
          <% @users.each do |user| %>
          <a href="javascript:void(0)" data-user-id="<%= user.id %>" class="list-group-item message_item">
            <h4 class="list-group-item-heading"><%= user.name_or_email %></h4>
          </a>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-9 ">
      <div class="panel panel-default">
        <div class="panel-body show-message message-panel">

        </div>
      </div>
      <div class="replay">
        <%= form_for(current_owner.messages.new ) do |f| %>
        <div class="row">
          <div class="9u 12u$(xsmall)">
            <%= f.text_area :content, rows: 2 %>
          </div>
          <%= f.hidden_field :receiver_id %>
          <div class="3u 12u$(xsmall)">
            <%= f.file_field :attachments, :name => "message[attachments_attributes][][file]",:multiple => true %>
            <br>
            <%= f.submit 'Send', :class => "button fit small col-md-1"%>
          </div>
        </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
